<div class="bg-black">
  <div class="container">
    <h2 class="text-white text-center">It's time to help us! What are your favorite movies?</h2>


    <%= form_with url: selection_path, method: :get, html: {class: "mb-4"} do |f| %>
      <%= f.text_field :query,
                  placeholder: "Type a movie title",
                  class: "form-control",
                  value: params[:query]
                  %>
    <% end %>
    <div class="w-100 text-center">
    <a href="/favourite_movies" class="text-decoration-none "> <button class="text-white text-center bg-black border-white py-3 px-4">Movies selected <%= @favourite_movies.count %>/10</button></a>
    </div>

    <%= render "list", movies: @movies%>
  </div>
</div>
