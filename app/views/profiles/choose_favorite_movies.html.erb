<div class="mt-5">
<h1 class="text-center mb-3">It's time to help us best select movies for you</h1>

<h3 class="text-center mb-2">What are your favorite movies?</h3>

<%= link_to favourite_movies_path(current_user) do %>
<h6 class="text-center my-3" style="text-decoration: none;"><strong>Movies Selected <%=@favourite_movies.count%>/10</strong></h6>
<% end %>


<%= form_with url: selection_path, method: :get, html: {class: "mb-4"} do |f| %>
  <%= f.label :query, "Type a movie title" %>
  <%= f.text_field :query,
              class: "form-control",
              value: params[:query]
              %>
<% end %>

<%= render "list", movies: @movies%>
</div>
