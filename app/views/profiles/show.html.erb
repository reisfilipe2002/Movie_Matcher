 <% if @user.photo.attached? %>
  <%= cl_image_tag @user.photo.key, class: "avatar"%>
<% else %>
  <%= image_tag "blank-profile-picture-973460_1280 (1).webp", class: "avatar"%>
<% end %>

<h1>
<%= @user.first_name %> <%= @user.last_name %>
</h1>

<%= link_to "Edit Profile", edit_user_password_path(@user) %>

<%= link_to "Delete Profile", cancel_user_registration_path(@user), data: {turbo_method: :delete} %>

<%= link_to "Log Out",  destroy_user_session_path, data: {turbo_method: :delete} %>
